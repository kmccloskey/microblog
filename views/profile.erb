<html>
<body>
	<button class="edit_profile_button">Edit Profile</button>
	<div class="profile_info_container">
		<h1><%= current_user.fname + " " + current_user.lname%></h1>
		<h2><%= current_user.username%></h2>
		<p> <%= current_user.profile.bio%></p>
		<p> <%= current_user.fname + " is " + current_user.profile.age%></p>
		<p> <%= current_user.profile.location%></p>
	</div>
	<div class="profile_posts_container">
			<% current_user.posts.each do |post| %>
					<p><%=post.content%></p>
			<%end%>
	</div>
	<div class="edit_profile_form">
		<form action="/edit_settings" method="POST">
			<input class="settings_input" type="text" name="fname" placeholder="first name" value="<%= @current_user.fname %>">
			<input class="settings_input" type="text" name="lname" placeholder="last name" value="<%= @current_user.lname %>">
			<input class="settings_input" type="text" name="email" placeholder="email address" value="<%= @current_user.email %>">
			<textarea class="settings_input" type="text" name="bio"placeholder="bio"><%= @current_user.profile.bio %></textarea>
			<input class="settings_input" type="text" name="age" value="<%= @current_user.profile.age %>"placeholder="age">
			<input class="settings_input" type="text" name="location" value="<%= @current_user.profile.location %>"placeholder="location">
			<input type="submit">
		</form>
	</div>
	<div class="delete_account_phrase">
		<p><a href="#">Do you want to delete your account?</a></p>
	</div>
	<div class="are_you_sure">
		<p><a href="#">Are you sure?</a></p>
	</div>
	<div class="please_rate_us">
		<p><a href="#">Rate us today!  Click to continue</a></p>
	</div>
	<div class="maybe_next_time">
		<p><a href="#">Well I guess if you click this you can delete your account</a></p>
	</div>
	<div class="just_kidding_fine">
		<p><a href="#">Fine click here</a></p>
	</div>
	<div class="delete_user">
		<form action="/delete_current_user" method="POST">
			<input type="submit" class="delete_user_button" value="Delete Account">
		</form>
	</div>
</body>
</html>

