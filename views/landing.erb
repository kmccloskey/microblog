<div class="landing_background">
	<div class="landing_title">
		Mumblr
	</div>
	<div class="login_center">
		<!-- PLEASE STYLE THIS FLASH ALERT -->
		<div>
			<%= flash[:alert] %>
		</div>
		<div class="signin">
			<a href="#">Sgn In</a>
		</div>
		<div class="signup">
			<a href="#">Gt Startd</a>
		</div>
